<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SaveUpAppFrontend.ViewModels"
             x:Class="SaveUpAppFrontend.Views.DashboardPage"
             Title="Dashboard"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <vm:DashboardViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

         <!-- Add Product Section -->
            <Frame CornerRadius="12" Padding="15" BackgroundColor="{DynamicResource CardBackgroundColor}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Neues Produkt hinzufügen"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Entry Placeholder="Produktname"
                           Text="{Binding NewProduct.Description}"
                           BackgroundColor="Transparent"
                           ClearButtonVisibility="WhileEditing"/>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry Placeholder="0.00"
                               Text="{Binding NewProduct.Price, StringFormat='{0:F2}'}"
                               Keyboard="Numeric"
                               BackgroundColor="Transparent"
                               ClearButtonVisibility="WhileEditing"/>

                        <Label Text="CHF" 
                               Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center"/>
                    </Grid>

                    <Button Text="Hinzufügen"
                            Command="{Binding AddCommand}"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Product List Header -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="Meine Produkte"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource PrimaryTextColor}"/>

                <Button Text="Alle löschen"
                        Command="{Binding DeleteAllCommand}"
                        TextColor="White"
                        BackgroundColor="{DynamicResource ErrorColor}"
                        FontAttributes="Bold"
                        Grid.Column="1"/>
            </Grid>

            <!-- Product List -->
            <CollectionView ItemsSource="{Binding Products}" 
                           SelectionMode="None"
                           EmptyView="Keine Produkte hinzugefügt">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10" 
                               Padding="15" 
                               BackgroundColor="{DynamicResource CardBackgroundColor}"
                               Margin="0,0,0,10">
                            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                <!-- Product Description -->
                                <Label Text="{Binding Description}"
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       LineBreakMode="TailTruncation"/>

                                <!-- Price -->
                                <Label Text="{Binding Price, StringFormat='{0:C}'}"
                                       Grid.Column="1"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>

                                <!-- Delete Button -->
                                <Button Text="✕"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=DeleteCommand}"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="{DynamicResource ErrorColor}"
                                        TextColor="White"
                                        CornerRadius="20"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        Grid.Column="2"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>