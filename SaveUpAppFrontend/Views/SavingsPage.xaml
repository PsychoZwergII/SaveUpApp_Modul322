<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SaveUpAppFrontend.ViewModels"
             x:Class="SaveUpAppFrontend.Views.SavingsPage"
             Title="Ersparnisse"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

	<ContentPage.BindingContext>
		<vm:SavingsViewModel />
	</ContentPage.BindingContext>

	<VerticalStackLayout Padding="20" Spacing="20">
		<!-- Main Savings Card -->
		<Frame CornerRadius="16"
               Padding="25"
               BackgroundColor="{DynamicResource PrimaryColor}"
               HorizontalOptions="Fill"
               VerticalOptions="Center">

			<VerticalStackLayout Spacing="10" HorizontalOptions="Center">
				<Label Text="Gesamtersparnis"
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center"/>

				<Label Text="{Binding TotalSavings, StringFormat='CHF {0:F2}'}"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
			</VerticalStackLayout>
		</Frame>

		<!-- Savings Progress (optional) -->
		<ProgressBar Progress="0.6"
                     ProgressColor="{DynamicResource SecondaryColor}"
                     BackgroundColor="{DynamicResource SecondaryLightColor}"
                     HeightRequest="10"/>

		<Label Text="60% Ihres Sparziels erreicht"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="{DynamicResource SecondaryTextColor}"/>
	</VerticalStackLayout>
</ContentPage>