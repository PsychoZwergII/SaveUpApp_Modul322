<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SaveUpAppFrontend.ViewModels"
             x:Class="SaveUpAppFrontend.Views.UserPage"
             Title="Profil"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

	<ContentPage.BindingContext>
		<vm:UserViewModel />
	</ContentPage.BindingContext>

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">
			<!-- Header -->
			<Label Text="Mein Profil"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryTextColor}"/>

			<!-- User Stats Cards -->
			<Frame CornerRadius="12" Padding="15" BackgroundColor="{DynamicResource CardBackgroundColor}">
				<VerticalStackLayout Spacing="10">
					<Label Text="Statistiken"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

					<Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" RowSpacing="10">
						<Label Text="Mitglied seit:"
                               Grid.Row="0" Grid.Column="0"
                               FontSize="14"/>
						<Label Text="{Binding InstallDate, StringFormat='{0:dd.MM.yyyy}'}"
                               Grid.Row="0" Grid.Column="1"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="End"/>

						<Label Text="Gespart:"
                               Grid.Row="1" Grid.Column="0"
                               FontSize="14"/>
						<Label Text="{Binding TotalSavings, StringFormat='CHF {0:F2}'}"
                               Grid.Row="1" Grid.Column="1"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="End"/>

						<Label Text="Verzichtete Produkte:"
                               Grid.Row="2" Grid.Column="0"
                               FontSize="14"/>
						<Label Text="{Binding ProductCount}"
                               Grid.Row="2" Grid.Column="1"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="End"/>
					</Grid>
				</VerticalStackLayout>
			</Frame>

			<!-- Language Settings -->
			<Frame CornerRadius="12" Padding="15" BackgroundColor="{DynamicResource CardBackgroundColor}">
				<VerticalStackLayout Spacing="10">
					<Label Text="Spracheinstellung"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

					<Picker Title="Sprache auswählen"
                            SelectedItem="{Binding Language}"
                            BackgroundColor="Transparent">
						<Picker.ItemsSource>
							<x:Array Type="{x:Type x:String}">
								<x:String>Deutsch</x:String>
								<x:String>English</x:String>
							</x:Array>
						</Picker.ItemsSource>
					</Picker>
				</VerticalStackLayout>
			</Frame>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>